# postgres (required)
EXPLORER_DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/kasane

# canister (required for rpc receipt lookup)
EVM_CANISTER_ID=

# optional (defaults shown)
EXPLORER_DB_POOL_MAX=10
EXPLORER_IC_HOST=https://icp-api.io
EXPLORER_FETCH_ROOT_KEY=false
# HomeのLatest Blocks初期表示件数（1-500）
EXPLORER_LATEST_BLOCKS=10
EXPLORER_LATEST_TXS=20

# verify (optional defaults)
EXPLORER_VERIFY_ENABLED=0
EXPLORER_VERIFY_ALLOWED_COMPILER_VERSIONS=0.8.30
EXPLORER_VERIFY_AUTH_HMAC_KEYS=kid1:replace_me
EXPLORER_VERIFY_REQUIRED_SCOPE=verify.submit
EXPLORER_VERIFY_METRICS_SAMPLE_INTERVAL_MS=30000
EXPLORER_VERIFY_METRICS_RETENTION_DAYS=30
AUDIT_HASH_SALT_CURRENT=replace_me

# verify submit script (optional)
# VERIFY_SUBMIT_URL=http://localhost:3000/api/verify/submit
